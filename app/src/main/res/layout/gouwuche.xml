<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.GouwucheFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_gouwuche_bg"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="#FF3838"
        android:layout_marginTop="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="@+id/image_gouwuche_bg"
            app:layout_constraintTop_toTopOf="@+id/image_gouwuche_bg"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="115dp"
            android:layout_height="120dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="15dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/image_gouwuche_bg"
            app:layout_constraintBottom_toBottomOf="@id/image_gouwuche_bg"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="58dp"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="直液式走珠笔速干，流畅度非常棒，在太空也能书写，宇航员认证"
            app:layout_constraintTop_toTopOf="@+id/image_gouwuche_bg"
            app:layout_constraintEnd_toEndOf="@id/image_gouwuche_bg"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="#03A9F4"
            android:layout_marginStart="185dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="@+id/image_gouwuche_bg"
            app:layout_constraintTop_toTopOf="@+id/image_gouwuche_bg"
            tools:ignore="MissingConstraints" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="￥：66.6"
                android:textColor="#000000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>